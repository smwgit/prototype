<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="dataset">What's your data?</h1>
        <%= render 'shared/dataset_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>Prototype</h1>

  <p>
    The home page for the future <a href="http://fg.cns.utexas.edu/">FGStream</a> RNA-seq information database.
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>